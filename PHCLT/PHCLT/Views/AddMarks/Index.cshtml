
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-6 d-flex align-items-center justify-content-end">
    <button type="button" class="btn btn-light" onclick="location.href='@Url.Action("NewDashboard","Home")'">Home</button>
</div>
<div class="card-body">
    <!-- Dropdown to select standard -->
    <div class="form-group">
        <label for="standardDropdown">Select Standard:</label>
        <select id="standardDropdown" class="form-control">
            <option value="STD-9">STD-9</option>
            <option value="STD-10">STD-10</option>
            <option value="STD-11">STD-11</option>
            <option value="STD-12">STD-12</option>
        </select>
    </div>
    <div class="form-group">
        <label for="divDropdown">Select Div:</label>
        <select id="divDropdown" class="form-control">
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
        </select>
    </div>
    <div class="form-group">
        <label for="SubjectDropdown">Select Subject:</label>
        <select id="SubjectDropdown" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label for="ExamtypeDropdown">Select Exam Type:</label>
        <select id="ExamtypeDropdown" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label for="ExamtypeDropdown">Passing Mark:</label>
        <input type="text" class="form-control" id="Passingmark" placeholder="Enter Passing Mark">
    </div>
    <div class="table-responsive">
        <table id="productTable" class="table">
            <thead>
                <tr>
                    <th style="display:none">ID</th>
                    <th>Student Name</th>
                    <th>Marks</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data will be populated dynamically here -->
            </tbody>
        </table>
    </div>

    <button class="btn btn-primary my-2" type="button" id="saveStudents">Save Marks</button>
</div>
